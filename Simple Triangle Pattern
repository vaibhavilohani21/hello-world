
import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    int num;
	 Scanner sc = new Scanner(System.in);
	 System.out.println("How many number of rows u want?");
	 num = sc.nextInt();
	 for(int i=1;i<=num;i++){
	     for(int j=1;j<=i;j++){
	         System.out.print(j+" ");
	     }
	     System.out.println();
	 }
	 sc.close();
	}
	
}

